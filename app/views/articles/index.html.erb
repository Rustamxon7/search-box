<p style="color: green"><%= notice %></p>

<h1>Articles</h1>

<div class="search">
  <%= form_with(url: articles_path, method: :get, data: {
    turbo_frame: "articles", turbo_action: "advance"}) do |form| %>
    <%= form.text_field :query, placeholder: "Search articles" %>
    <%= form.submit "Search" %>
  <% end %>
</div>

<div id="articles">
  <% @articles.each do |article| %>
    <%= render article %>
  <% end %>
</div>

<%= link_to "New article", new_article_path %>
